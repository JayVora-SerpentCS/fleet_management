<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
		<!--Scheduler of Email for Vehicle Service -->
		<record id="fleet_mail_service" model="ir.cron">
			<field name="name" >Fleet Service Alert.</field>
			<field eval="True" name="active"/>
            <field name="state">code</field>
            <field name="code">model.service_send_mail()</field>
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field name="doall" eval="False" />
			<field name="model_id" ref="fleet.model_fleet_vehicle_log_services"/>
		</record>

        <!-- Out going Email configuration -->
        <record id="ir_mail_server_service" model="ir.mail_server">
            <field name="name">Vehicle Service</field>
            <field name="smtp_host">smtp.gmail.com</field>
            <field eval="465" name="smtp_port"/>
            <field eval="11" name="sequence"/>
            <field name="smtp_encryption">ssl</field>
        </record>

        <!--Email template  for Vehicle Service-->
        <record id="email_template_edi_fleet" model="mail.template">
            <field name="name">Fleet - Send by Email</field>
            <field name="subject">For Demo</field>
            <field name="email_from">${user.partner_id.email}</field>
            <field name="email_to">${object.purchaser_id.email}</field>
            <field name="model_id" ref="model_fleet_vehicle"/>
            <field name="mail_server_id" ref="ir_mail_server_service"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html"><![CDATA[
		<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
		           <p>Hello ${object.purchaser_id.name}</p>
		           <p>Your Vehicle ${object.vehicle_id  or ''} 's service Date is ${object.next_service_date  or ''}.
		        <div style="width: 347px; margin: 0px; padding: 5px 14px; line-height: 16px; background-color: #F2F2F2;">
		            <span style="color: #222; margin-bottom: 5px; display: block; ">
		            <p>Thank you,</p>
		            <p>Regards,</p>
		            <p>Fleet Manager</p>
		        </div>
		</div>
            ]]></field>
        </record>

        <record id="work_order_vehicle_location" model="stock.location">
            <field name="name">Vehicle</field>
            <field name="location_id" ref="stock.stock_location_company"/>
            <field name="usage">internal</field>
        </record>

